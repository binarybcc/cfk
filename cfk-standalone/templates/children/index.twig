{% extends "layouts/children.twig" %}

{% block title %}Children Needing Sponsorship{% endblock %}

{% block content %}
<div class="children-page">
    {# Page Header #}
    {% if viewingFamily and familyInfo %}
        <div class="page-header">
            <h1>Family {{ familyInfo.family_number }}</h1>
            <p>All children in this family who need Christmas sponsorship.</p>
            <div class="family-view-actions">
                <a href="/slim.php/children" class="btn btn-secondary">← Back to All Children</a>
            </div>
        </div>
    {% else %}
        <div class="page-header">
            <h1>Children Needing Christmas Sponsorship</h1>
            <p>Each child represents a family in our community who could use extra support this Christmas season. Browse the children below and select someone to sponsor.</p>
        </div>
    {% endif %}

    {# Filters Section (hidden in family view) #}
    {% if not viewingFamily %}
        <div class="filters-section">
            <form method="get" action="/slim.php/children" class="filters-form">
                {# Search Input #}
                <div class="filter-group">
                    <label for="search">Search</label>
                    <input type="text"
                           id="search"
                           name="search"
                           value="{{ filters.search ?? '' }}"
                           placeholder="Family ID, interests, wishes..."
                           aria-label="Search children">
                </div>

                {# Age Category Filter #}
                <div class="filter-group">
                    <label for="age_category">Age Group</label>
                    <select id="age_category" name="age_category" aria-label="Filter by age group">
                        <option value="">All Ages</option>
                        <option value="birth_to_4" {% if filters.age_category == 'birth_to_4' %}selected{% endif %}>Birth to 4 Years</option>
                        <option value="elementary" {% if filters.age_category == 'elementary' %}selected{% endif %}>Elementary (5-10)</option>
                        <option value="middle_school" {% if filters.age_category == 'middle_school' %}selected{% endif %}>Middle School (11-13)</option>
                        <option value="high_school" {% if filters.age_category == 'high_school' %}selected{% endif %}>High School (14-18)</option>
                    </select>
                </div>

                {# Gender Filter #}
                <div class="filter-group">
                    <label for="gender">Gender</label>
                    <select id="gender" name="gender" aria-label="Filter by gender">
                        <option value="">All</option>
                        <option value="M" {% if filters.gender == 'M' %}selected{% endif %}>Male</option>
                        <option value="F" {% if filters.gender == 'F' %}selected{% endif %}>Female</option>
                    </select>
                </div>

                {# Per Page Selector #}
                <div class="filter-group">
                    <label for="per_page">Show</label>
                    <select id="per_page" name="per_page" aria-label="Results per page">
                        {% for option in perPageOptions %}
                            <option value="{{ option }}" {% if perPage == option %}selected{% endif %}>
                                {{ option }} per page
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="filter-actions">
                    <button type="submit" class="btn btn-primary">Apply Filters</button>
                    <a href="/slim.php/children" class="btn btn-secondary">Clear</a>
                </div>
            </form>

            {# Results Summary #}
            <div class="results-summary" role="status" aria-live="polite">
                <p>Showing {{ children|length }} of {{ totalCount }} children</p>
            </div>
        </div>
    {% endif %}

    {# Children Grid - Using Reusable Component #}
    {% if children %}
        <div class="children-grid">
            {% for child in children %}
                {% include 'components/child-card.twig' with {
                    child: child,
                    variant: 'grid',
                    siblingsByFamily: siblingsByFamily,
                    showActions: true,
                    baseUrl: '/slim.php'
                } %}
            {% endfor %}
        </div>

        {# Pagination #}
        {% if totalPages > 1 and not viewingFamily %}
            <nav class="pagination" role="navigation" aria-label="Pagination">
                {% set queryString = paginationParams|url_encode %}

                {# Previous Button #}
                {% if currentPage > 1 %}
                    <a href="/slim.php/children?p={{ currentPage - 1 }}{% if queryString %}&{{ queryString }}{% endif %}"
                       class="btn btn-secondary pagination__prev"
                       aria-label="Go to previous page">
                        ← Previous
                    </a>
                {% endif %}

                {# Page Numbers #}
                <div class="pagination__numbers">
                    {% for page in 1..totalPages %}
                        {% if page == currentPage %}
                            <span class="pagination__current-page" aria-current="page">{{ page }}</span>
                        {% elseif page == 1 or page == totalPages or (page >= currentPage - 2 and page <= currentPage + 2) %}
                            <a href="/slim.php/children?p={{ page }}{% if queryString %}&{{ queryString }}{% endif %}"
                               aria-label="Go to page {{ page }}">
                                {{ page }}
                            </a>
                        {% elseif page == currentPage - 3 or page == currentPage + 3 %}
                            <span aria-hidden="true">...</span>
                        {% endif %}
                    {% endfor %}
                </div>

                {# Next Button #}
                {% if currentPage < totalPages %}
                    <a href="/slim.php/children?p={{ currentPage + 1 }}{% if queryString %}&{{ queryString }}{% endif %}"
                       class="btn btn-secondary pagination__next"
                       aria-label="Go to next page">
                        Next →
                    </a>
                {% endif %}
            </nav>

            {# Pagination Info #}
            <div class="pagination-info" role="status" aria-live="polite">
                <p>Page {{ currentPage }} of {{ totalPages }} ({{ totalCount }} total children)</p>
            </div>
        {% endif %}
    {% else %}
        {# No Results #}
        <div class="no-results">
            <h2>No children found</h2>
            <p>Try adjusting your filters or search criteria.</p>
            <a href="/slim.php/children" class="btn btn-primary">View All Children</a>
        </div>
    {% endif %}

    {# Call to Action #}
    {% if not viewingFamily %}
        <div class="cta-section">
            <h2>Can't Decide? We Can Help!</h2>
            <p>If you're having trouble choosing which child to sponsor, we can help match you with a family that fits your preferences.</p>
            <a href="/slim.php/donate" class="btn btn-success btn-large">Make a General Donation</a>
        </div>
    {% endif %}
</div>
{% endblock %}
