{# Admin Dashboard Template - Week 3 Part 2 #}

<div class="admin-dashboard">
    <div class="dashboard-header">
        <h1>Admin Dashboard</h1>
        <p class="dashboard-subtitle">Manage children and sponsorships for Christmas for Kids</p>
    </div>

    {# Statistics Cards #}
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">üë•</div>
            <div class="stat-content">
                <h3>{{ stats.total_children }}</h3>
                <p>Total Children</p>
            </div>
            <a href="/admin/manage_children.php" class="stat-link">Manage</a>
        </div>

        <div class="stat-card">
            <div class="stat-icon">üéÅ</div>
            <div class="stat-content">
                <h3>{{ stats.available_children }}</h3>
                <p>Available for Sponsorship</p>
            </div>
            <a href="/admin/manage_children.php?status=available" class="stat-link">View</a>
        </div>

        <div class="stat-card">
            <div class="stat-icon">‚è≥</div>
            <div class="stat-content">
                <h3>{{ stats.pending_sponsorships }}</h3>
                <p>Pending Sponsorships</p>
            </div>
            <a href="/admin/manage_sponsorships.php?status=pending" class="stat-link">Review</a>
        </div>

        <div class="stat-card stat-success">
            <div class="stat-icon">‚úÖ</div>
            <div class="stat-content">
                <h3>{{ stats.completed_sponsorships }}</h3>
                <p>Completed</p>
            </div>
            <a href="/admin/manage_sponsorships.php?status=completed" class="stat-link">View</a>
        </div>

        <div class="stat-card">
            <div class="stat-icon">üë®‚Äçüë©‚Äçüëß‚Äçüë¶</div>
            <div class="stat-content">
                <h3>{{ stats.total_families }}</h3>
                <p>Total Families</p>
            </div>
            <a href="/admin/manage_children.php" class="stat-link">View</a>
        </div>
    </div>

    {# Quick Actions #}
    <div class="quick-actions">
        <h2>Quick Actions</h2>
        <div class="action-buttons">
            <a href="/admin/manage_children.php?action=add" class="btn btn-primary btn-large">
                ‚ûï Add New Child
            </a>
            <a href="/admin/import_csv.php" class="btn btn-secondary btn-large">
                üìÑ Import CSV
            </a>
            <a href="/slim.php/admin/reports" class="btn btn-secondary btn-large">
                üìä View Reports
            </a>
        </div>
    </div>

    {# Children Needing Attention #}
    {% if childrenNeedingAttention %}
        <div class="attention-section alert alert-warning">
            <h2>‚ö†Ô∏è Needs Attention ({{ childrenNeedingAttention|length }})</h2>
            <p>These sponsorships have been pending for more than 48 hours:</p>

            <div class="attention-list">
                {% for child in childrenNeedingAttention %}
                    <div class="attention-item">
                        <div class="attention-info">
                            <strong>Family {{ child.display_id }}</strong>
                            <span class="attention-detail">
                                Sponsor: {{ child.sponsor_email }}
                            </span>
                            <span class="attention-detail">
                                Pending since: {{ child.request_date|date('M d, Y g:i A') }}
                            </span>
                        </div>
                        <div class="attention-actions">
                            <a href="/admin/manage_sponsorships.php?email={{ child.sponsor_email }}"
                               class="btn btn-small btn-primary">
                                Review
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    {# Recent Activity #}
    <div class="recent-activity">
        <h2>Recent Sponsorships</h2>

        {% if recentSponsorships %}
            <div class="activity-table-container">
                <table class="activity-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Child</th>
                            <th>Sponsor</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for sponsorship in recentSponsorships %}
                            <tr>
                                <td>{{ sponsorship.request_date|date('M d, Y') }}</td>
                                <td>
                                    <strong>Family {{ sponsorship.child_display_id }}</strong>
                                    <br>
                                    <small>{{ formatAge(sponsorship.age_months) }}, {{ sponsorship.gender == 'M' ? 'Male' : 'Female' }}</small>
                                </td>
                                <td>
                                    {{ sponsorship.sponsor_name }}<br>
                                    <small>{{ sponsorship.sponsor_email }}</small>
                                </td>
                                <td>
                                    <span class="status-badge status-{{ sponsorship.status }}">
                                        {{ sponsorship.status|capitalize }}
                                    </span>
                                </td>
                                <td>
                                    <a href="/admin/manage_sponsorships.php?id={{ sponsorship.id }}"
                                       class="btn btn-small btn-secondary">
                                        View
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="view-all-link">
                <a href="/admin/manage_sponsorships.php" class="btn btn-secondary">
                    View All Sponsorships ‚Üí
                </a>
            </div>
        {% else %}
            <p class="no-data">No recent sponsorships.</p>
        {% endif %}
    </div>
</div>

