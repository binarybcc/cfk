{# Admin Reports Template - Week 3 Part 3 #}

<div class="admin-reports">
    <div class="reports-header">
        <h1>Reports</h1>
        <p class="reports-subtitle">View comprehensive statistics and data</p>
    </div>

    {# Report Type Selector #}
    <div class="report-selector">
        <h2>Select Report Type</h2>
        <div class="report-buttons">
            <a href="/slim.php/admin/reports?type=summary"
               class="btn {% if reportType == 'summary' %}btn-primary{% else %}btn-secondary{% endif %}">
                üìä Summary Report
            </a>
            <a href="/slim.php/admin/reports?type=sponsorships"
               class="btn {% if reportType == 'sponsorships' %}btn-primary{% else %}btn-secondary{% endif %}">
                üéÅ Sponsorships Report
            </a>
            <a href="/slim.php/admin/reports?type=children"
               class="btn {% if reportType == 'children' %}btn-primary{% else %}btn-secondary{% endif %}">
                üë• Children Statistics
            </a>
        </div>
    </div>

    {# Summary Report #}
    {% if reportType == 'summary' %}
        <div class="report-section">
            <h2>Summary Report</h2>

            {# Dashboard Stats #}
            <div class="stats-overview">
                <h3>Overall Statistics</h3>
                <div class="stats-grid">
                    <div class="stat-item">
                        <div class="stat-value">{{ dashboardStats.total_children }}</div>
                        <div class="stat-label">Total Children</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value">{{ dashboardStats.available_children }}</div>
                        <div class="stat-label">Available</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value">{{ sponsorshipSummary.total_sponsorships }}</div>
                        <div class="stat-label">Total Sponsorships</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value">{{ sponsorshipSummary.unique_sponsors }}</div>
                        <div class="stat-label">Unique Sponsors</div>
                    </div>
                </div>
            </div>

            {# Sponsorship Breakdown #}
            <div class="breakdown-section">
                <h3>Sponsorship Status Breakdown</h3>
                <table class="report-table">
                    <thead>
                        <tr>
                            <th>Status</th>
                            <th>Count</th>
                            <th>Percentage</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for status, count in sponsorshipSummary.by_status %}
                            {% set percentage = (count / sponsorshipSummary.total_sponsorships * 100)|round(1) %}
                            <tr>
                                <td>
                                    <span class="status-badge status-{{ status }}">
                                        {{ status|capitalize }}
                                    </span>
                                </td>
                                <td>{{ count }}</td>
                                <td>{{ percentage }}%</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Children Breakdown #}
            <div class="breakdown-section">
                <h3>Children by Age Group</h3>
                <table class="report-table">
                    <thead>
                        <tr>
                            <th>Age Group</th>
                            <th>Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for group, count in childrenStats.by_age_group %}
                            <tr>
                                <td>{{ group }}</td>
                                <td>{{ count }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}

    {# Sponsorships Report #}
    {% if reportType == 'sponsorships' %}
        <div class="report-section">
            <h2>Sponsorships Report</h2>

            {# Filters #}
            <div class="report-filters">
                <form method="get" action="/slim.php/admin/reports" class="filter-form">
                    <input type="hidden" name="type" value="sponsorships">

                    <div class="filter-group">
                        <label for="status">Status</label>
                        <select name="status" id="status">
                            <option value="">All</option>
                            <option value="pending" {% if filters.status == 'pending' %}selected{% endif %}>Pending</option>
                            <option value="completed" {% if filters.status == 'completed' %}selected{% endif %}>Completed</option>
                            <option value="cancelled" {% if filters.status == 'cancelled' %}selected{% endif %}>Cancelled</option>
                        </select>
                    </div>

                    <div class="filter-group">
                        <label for="date_from">Date From</label>
                        <input type="date" name="date_from" id="date_from" value="{{ filters.date_from ?? '' }}">
                    </div>

                    <div class="filter-group">
                        <label for="date_to">Date To</label>
                        <input type="date" name="date_to" id="date_to" value="{{ filters.date_to ?? '' }}">
                    </div>

                    <div class="filter-actions">
                        <button type="submit" class="btn btn-primary">Apply Filters</button>
                        <a href="/slim.php/admin/reports?type=sponsorships" class="btn btn-secondary">Clear</a>
                    </div>
                </form>
            </div>

            {# Results #}
            {% if sponsorships %}
                <div class="report-results">
                    <p class="results-count">Found {{ sponsorships|length }} sponsorships</p>

                    <div class="table-container">
                        <table class="report-table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Child ID</th>
                                    <th>Sponsor Name</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for sponsorship in sponsorships %}
                                    <tr>
                                        <td>{{ sponsorship.request_date|date('M d, Y') }}</td>
                                        <td>Family {{ sponsorship.child_display_id }}</td>
                                        <td>{{ sponsorship.sponsor_name }}</td>
                                        <td>{{ sponsorship.sponsor_email }}</td>
                                        <td>
                                            <span class="status-badge status-{{ sponsorship.status }}">
                                                {{ sponsorship.status|capitalize }}
                                            </span>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="export-actions">
                        <button class="btn btn-secondary" onclick="window.print()">üñ®Ô∏è Print</button>
                    </div>
                </div>
            {% else %}
                <p class="no-data">No sponsorships found matching the selected filters.</p>
            {% endif %}
        </div>
    {% endif %}

    {# Children Statistics Report #}
    {% if reportType == 'children' %}
        <div class="report-section">
            <h2>Children Statistics</h2>

            {# By Status #}
            <div class="breakdown-section">
                <h3>Children by Status</h3>
                <table class="report-table">
                    <thead>
                        <tr>
                            <th>Status</th>
                            <th>Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for status, count in childrenStats.by_status %}
                            <tr>
                                <td>
                                    <span class="status-badge status-{{ status }}">
                                        {{ status|capitalize }}
                                    </span>
                                </td>
                                <td>{{ count }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# By Age Group #}
            <div class="breakdown-section">
                <h3>Children by Age Group</h3>
                <table class="report-table">
                    <thead>
                        <tr>
                            <th>Age Group</th>
                            <th>Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for group, count in childrenStats.by_age_group %}
                            <tr>
                                <td>{{ group }}</td>
                                <td>{{ count }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# By Gender #}
            <div class="breakdown-section">
                <h3>Children by Gender</h3>
                <table class="report-table">
                    <thead>
                        <tr>
                            <th>Gender</th>
                            <th>Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for gender, count in childrenStats.by_gender %}
                            <tr>
                                <td>{{ gender == 'M' ? 'Male' : 'Female' }}</td>
                                <td>{{ count }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
</div>

