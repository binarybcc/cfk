{
    "name": "cfk/standalone",
    "description": "Christmas for Kids - Standalone Sponsorship System",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "monolog/monolog": "^3.5",
        "robmorgan/phinx": "^0.15",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.0",
        "slim/twig-view": "^3.0",
        "symfony/config": "^7.0",
        "symfony/console": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "twig/twig": "^3.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "infection/infection": "^0.31.9",
        "phpmd/phpmd": "^2.15",
        "phpmetrics/phpmetrics": "^2.9",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0",
        "rector/rector": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "tracy/tracy": "^2.10",
        "vimeo/psalm": "^6.13"
    },
    "autoload": {
        "psr-4": {
            "CFK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CFK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse --memory-limit=512M",
        "phpstan:includes": "phpstan analyse includes --level=6 --memory-limit=512M",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "rector": "rector process --dry-run",
        "rector:fix": "rector process",
        "php-cs-fixer": "php-cs-fixer fix --dry-run --diff",
        "php-cs-fixer:fix": "php-cs-fixer fix",
        "quality": [
            "@rector",
            "@phpstan:includes",
            "@cs-check"
        ],
        "migrate": "phinx migrate",
        "migrate:rollback": "phinx rollback",
        "migrate:status": "phinx status",
        "migrate:create": "phinx create",
        "seed": "phinx seed:run"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
