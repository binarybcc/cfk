{
    "name": "cfk/standalone",
    "description": "Christmas for Kids - Standalone Sponsorship System",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "robmorgan/phinx": "^0.15"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "CFK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CFK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=8",
        "cs-check": "phpcs --standard=PSR12 src",
        "cs-fix": "phpcbf --standard=PSR12 src",
        "migrate": "phinx migrate",
        "migrate:rollback": "phinx rollback",
        "migrate:status": "phinx status",
        "migrate:create": "phinx create",
        "seed": "phinx seed:run"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}