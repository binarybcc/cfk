# Christmas for Kids - Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# SMTP Configuration (for email sending)
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Application Settings
# Uncomment and set these if you want to override defaults
# APP_DEBUG=false
# BASE_URL=https://yourdomain.com

# Production SSH Deployment Credentials
# Used for deploying to live site via SCP
# Only needed if you're deploying to production
SSH_HOST=your_ssh_host
SSH_PORT=22
SSH_USER=your_ssh_username
SSH_PASSWORD=your_ssh_password
SSH_REMOTE_PATH=/path/to/public_html
