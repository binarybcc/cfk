<?xml version="1.0"?>
<ruleset name="CFK Coding Standards">
    <description>Coding standards for CFK Sponsorship System</description>

    <!-- What to scan -->
    <file>src</file>
    <file>includes</file>
    <file>pages</file>
    <file>admin</file>
    <file>cron</file>
    <file>tests</file>

    <!-- What to exclude -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- How to scan -->
    <arg name="colors"/>
    <arg value="sp"/> <!-- Show sniff and progress -->
    <arg name="basepath" value="."/>
    <arg name="parallel" value="75"/>
    <arg name="extensions" value="php"/>

    <!-- Use PSR-12 as base standard -->
    <rule ref="PSR12"/>

    <!-- Additional rules -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
    <rule ref="Generic.PHP.RequireStrictTypes"/>

    <!-- Relaxed rules during migration -->
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <severity>3</severity> <!-- Warning, not error -->
    </rule>
</ruleset>
